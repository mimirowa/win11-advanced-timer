{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "${activeName}",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "${remainingText}",
      "horizontalAlignment": "Center",
      "size": "ExtraLarge"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "title": "Pause",
          "verb": "pause",
          "data": { "id": "${activeId}" }
        },
        {
          "type": "Action.Execute",
          "title": "Resume",
          "verb": "resume",
          "data": { "id": "${activeId}" }
        },
        {
          "type": "Action.Execute",
          "title": "Cancel",
          "verb": "cancel",
          "data": { "id": "${activeId}" }
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Presets",
      "weight": "Bolder"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "title": "1 min",
          "verb": "startPreset",
          "data": { "durationSeconds": 60 }
        },
        {
          "type": "Action.Execute",
          "title": "5 min",
          "verb": "startPreset",
          "data": { "durationSeconds": 300 }
        },
        {
          "type": "Action.Execute",
          "title": "10 min",
          "verb": "startPreset",
          "data": { "durationSeconds": 600 }
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Custom",
      "weight": "Bolder"
    },
    {
      "type": "Input.Number",
      "id": "minutes",
      "min": 0,
      "placeholder": "Minutes"
    },
    {
      "type": "Input.Number",
      "id": "seconds",
      "min": 0,
      "placeholder": "Seconds"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "title": "Start",
          "verb": "startCustom"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Recents",
      "weight": "Bolder"
    },
    {
      "type": "Table",
      "columns": [
        { "width": 1 },
        { "width": 1 }
      ],
      "rows": [
        {
          "$data": "${data.recents}",
          "cells": [
            {
              "type": "TableCell",
              "items": [ { "type": "TextBlock", "text": "${name}" } ]
            },
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.Execute",
                      "title": "Restart",
                      "verb": "restartRecent",
                      "data": { "durationSeconds": ${durationSeconds}, "name": "${name}" }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Open HUD",
      "verb": "openHud",
      "data": { "id": "${activeId}" }
    }
  ]
}
