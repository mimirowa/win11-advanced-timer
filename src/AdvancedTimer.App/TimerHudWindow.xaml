<Window
    x:Class="AdvancedTimer.App.TimerHudWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Timer" Width="260" Height="160">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
        <TextBlock x:Name="CountdownText" FontSize="36" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4">
            <Button x:Name="PauseButton" Content="Pause" Click="OnPause"/>
            <Button x:Name="ResumeButton" Content="Resume" Click="OnResume"/>
            <Button x:Name="RestartButton" Content="Restart" Click="OnRestart"/>
            <Button x:Name="CancelButton" Content="Cancel" Click="OnCancel"/>
        </StackPanel>
        <CheckBox x:Name="TopMostToggle" Content="Always on top" Checked="OnTopMost" Unchecked="OnTopMost"/>
    </StackPanel>
</Window>

